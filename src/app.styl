	.App
		text-align center
		width 980px
		margin 0 auto

	.App-logo
		animation App-logo-spin infinite 20s linear
		height 40px
		pointer-events none

	.App-header
		background-color #282c34
		min-height 100px
		display flex
		flex-direction column
		align-items center
		justify-content center
		font-size 20px
		color white
		padding 20px 0

	.App-link 
		color #61dafb

	@keyframes App-logo-spin 
		from {
			transform rotate(0deg)
		}
		to {
			transform rotate(360deg)
		}
	.personal-info
		padding 20px 0
		background #282c34
		text-align center
		ul
			li
				padding 10px 30px
				color #fff
				text-align left
				box-sizing content-box
				height 30px
				line-height @height
				.span-l
					padding-right 10px
				.span-r
					padding-left 40px
					a
						color #fff
